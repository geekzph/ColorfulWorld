<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="match_parent">
        <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px"/>
        <EditText android:id="@+id/editText1" android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent">
            <requestFocus></requestFocus>
        </EditText>
        <ImageButton android:layout_height="wrap_content" android:id="@+id/imageButton1" android:src="@drawable/ic_btn_search" android:layout_width="58dp"></ImageButton>
        
    </LinearLayout>
    <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
  <GridView 
 android:id="@+id/homeGrid" android:layout_width="fill_parent"
 android:layout_height="fill_parent" android:verticalSpacing="40dp"
 android:numColumns="2"
 android:stretchMode="columnWidth"
 android:gravity="center" android:horizontalSpacing="20dp" android:columnWidth="90dp">
</GridView>
</LinearLayout>
